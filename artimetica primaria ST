#include <bits/stdc++.h>
using namespace std;
int main()
{
    int a, b, s, carry, totalCarry;
    while (cin >> a >> b)
    {
        totalCarry = -1; carry = 0;
        while (a || b)
        {
            if (a%10 + b%10 + carry)
            {
                carry = a%10 + b%10 + carry - 9;
                totalCarry++;
            }
            else carry = 0;
            if (a != 0) a /= 10;
            if (b != 0) b /= 10;
        }
        if (carry != 0) cout << totalCarry << " carry operations." << endl;
        else cout << "No carry operation." << endl;
    }

    return 0;
}
/*
  1
 99
---
100

   1
 999
----
1000
*/
