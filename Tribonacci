include <iostream>
using namespace std;
int main() {
    int i=0,n,t,a1=1,a2=1,a3=2;
    cin>> n;
    switch (n) {
    case 1: cout<<"1"<<endl; break;
    case 2: cout<<"1"<<endl; break;
    case 3: cout<<"2"<<endl; break;
    default: while (i<n) {
        t = a1+a2+a3;
        i++;
        a1 = a2;
        a2 = a3;
        a3 = t;
         }
         cout<<t<<endl;
    break;
    }
    return 0;
}
